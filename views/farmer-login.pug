extends layout

block head
  link(href='/stylesheets/login.css', rel='stylesheet')

block content

  form.form-signin(action="/users/farmer/login", method="post")

    if success
      .alert.alert-dismissible.alert-danger
        button.close(type='button', data-dismiss='alert') ×
        strong Farmer registration successful.
    if errors
      .alert.alert-dismissible.alert-danger
        button.close(type='button', data-dismiss='alert') ×
        strong Incorrect Mobile number and/or Password.

    h1.h3.mb-3.font-weight-normal Please login
    label.sr-only(for='inputMobile') Mobile number
    input#inputMobile.form-control(name='mobile', type='text', placeholder='Mobile number', autofocus='')
    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(name='password', type='password', placeholder='Password')
    .checkbox.mb-3
      label
        input(type='checkbox', value='remember-me')
        |  Remember me
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
    